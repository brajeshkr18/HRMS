        }
        function GetStatusValue(name) {
            var allStatus = @Html.Raw(Json.Encode(CommonHelper.GetListFromEnum<HRMS.Utility.Enums.AccountStatus>()));
            for (i = 0; i < allStatus.length; i++) {
                if (name == allStatus[i].Key)
                    return allStatus[i].Value;
            }

        }


